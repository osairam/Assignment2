<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_trip_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination" />

    <EditText
        android:id="@+id/edit_trip_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinner_trip_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/radio_group_trip_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radio_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business" />

        <RadioButton
            android:id="@+id/radio_leisure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leisure" />
    </RadioGroup>

    <Button
        android:id="@+id/button_save_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Trip"
        android:layout_marginTop="16dp" />
</LinearLayout>
